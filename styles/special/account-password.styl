.account-password
  margin 20px auto
  padding 20px
  width $width
  min-height 600px
  border 1px solid $border-color-split
  border-radius $border-radius-base
  background $component-background

  &-title
    font-size 16px
    color $title-color
    font-weight bold

  .ant-alert
    margin 20px 0 36px

  &-form
    margin 0 auto
    padding-left 20px
    width 505px

    &-error
      margin-top -10px
      padding 0 0 10px 135px
      font-size $font-size-sm
      color $error-color

  .ant-btn
    margin-left 135px
    padding 0
    width 80px
