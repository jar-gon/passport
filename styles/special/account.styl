.account
  min-height 100%
  half-background('../assets/account-bg.jpg', $black)

  &-wrapper
    base-width 370px
    padding-left 20px

    &-slogan
      padding 50px 20px 30px 0
      font-size $font-size-lg
      color $white
      text-align center

    .ant-form

      &-item
        padding-bottom 0

        &-label
          padding-bottom 4px
          line-height 22px

    .has-error
      .ant-input
        background rgba($white, .1)

        &:hover
          background rgba($white, .1)

    .ant-input
      color $white
      border-color rgba($white, .1)
      background rgba($white, .1)

      &-suffix
        right 0
        width 82px
        font-size $font-size-sm
        text-align center
        color $white
        cursor pointer

        div
          padding 8px 0

        &:before
          position absolute
          left 0
          top 7px
          content ''
          width 1px
          height 20px
          background $border-normal-color

        &-disabled
          color rgba($white, .6)
          cursor not-allowed

      &-affix-wrapper

        .ant-input:not(:last-child)
          padding-right 92px

    .ant-btn
      width 330px

  &--error
    margin-top -8px
    padding-bottom 8px
    font-size $font-size-sm
    color $red

  &--links
    margin-top 20px
    font-size $font-size-sm
    color $white

    a + a
      padding-left 12px

.login, .forget--step1

  .nc-container
    margin 8px 0 20px

.register, .forget--step2

  .account-wrapper
    top 40px

  .agreement
    display inline-block
    margin-left 10px
    width 300px
    vertical-align top
